<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="persistenceUnit"
		transaction-type="RESOURCE_LOCAL">

		<class>com.mcmproxibanque.model.Employee</class>
		<class>com.mcmproxibanque.model.Advisor</class>
		<class>com.mcmproxibanque.model.Manager</class>
		<class>com.mcmproxibanque.model.Customer</class>
		<class>com.mcmproxibanque.model.Account</class>
		<class>com.mcmproxibanque.model.SavingAccount</class>
		<class>com.mcmproxibanque.model.CurrentAccount</class>
		<class>com.mcmproxibanque.model.Transfer</class>
		<class>com.mcmproxibanque.model.Address</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>

</persistence>